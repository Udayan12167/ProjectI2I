<% notifs = Notification.order("created_at desc").all %>

<% notifs.each do |n| %>
<% if n.user_id == current_user.id && n.content_id == 1%>
          <%= link_to ({:controller => "wishlists", :action => "read" , :created => n.created_at ,:u => n.user_id }), "data-toggle" => "modal", "data-target" =>"tooltip", onClick:"triggerModal(this)",:remote => true do %>
                      <div class="notification-container">


                  
                

                  
                           <%= image_tag(fimage(n.owner_id), :class => "feed-thumbnail" , :title => "thumbnail-dp")%>
                          <p class="feed-username"><%= n.name %></p>
                           <p class="feed-posttext"><%= n.content%> at 
                           <% if ((Time.now - n.created_at).to_i)/3600*24 > 1 %>
                            <p class="feed-time">at <%= n.created_at %></p>
                            <%else%>
                           <p class="feed-time">at <%= n.relative_time(n.created_at) %></p>
                           <%end%>
                         
                       </p>
                           
                      </div>
                    <%end%>
                 <%end%>
                 <%end%>
                

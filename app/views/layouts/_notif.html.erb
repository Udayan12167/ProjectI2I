<% activities = PublicActivity::Activity.order("created_at desc") %>
				<% activities.each do |activity| %>
					<% if activity.owner %>
					
					<a href="#" class="notification-link">
                      <div class="notification-container">
                        					
                	
                   				 <%= image_tag(activity.owner.largeimage, :class => "feed-thumbnail" , :title => "thumbnail-dp")%>
                    			<a class="feed-username" href=""><%= link_to activity.owner.name , root_url if activity.owner %></a>
                   				 <p class="feed-posttext">added wishlist item <%= link_to activity.trackable.link, root_url %> at <%= activity.created_at %></p>
                      </div>
                    </a>
                 <%end%>
                <%end%>
                <% activities.clear %>
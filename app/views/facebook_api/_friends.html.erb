<% friends_list = friends %>
<% users=User.all %>
<% uuid=[] %>
<% users.each do |t| %>
<% uuid << t["uid"] %>
<% end %>

<% friends_list.each do |hash| %>
    <% if hash["id"].in? uuid %>
        <% user=User.find_by_uid(hash["id"]) %>
        <div class="friends-container">
        <div class="friends-media">
        <a class="pull-left" href="#">
            <%= image_tag(fimage(hash["id"]), :class => "friends-media-object")%>
        </a>
        <div class="friends-media-body">
            <h4 class="media-heading">
              <%= hash["name"]%>
              <%= hash["birthday"]%>
            </h4>
            <%Friendship.request(current_user,user)%>
            <%Friendship.accept(user,current_user)%>
            <p><%= friendship_status(current_user,user) %></p>
        </div>
    </div>
</div>
    <%end %>
<%end%>
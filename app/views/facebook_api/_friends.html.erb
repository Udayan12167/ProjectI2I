<% friends_list = friends %>
<% users=User.all %>
<% uuid=[] %>
<% users.each do |t| %>
<% uuid << t["uid"] %>
<% end %>

<% friends_list.each do |hash| %>
    <% if hash["id"].in? uuid %>
        <% user=User.find_by_uid(hash["id"]) %>
        <div class="friends-container">
        <div class="friends-media">
        <a class="pull-left" href="#">
            <%= link_to image_tag(fimage(hash["id"]),:class => "friends-media-object"), {:action => 'index', :controller => 'friendview', my_params: user.id} %>
        </a>
        <div class="friends-media-body" style="display:inline-block; vertical-allign:top">
            <h4 class="media-heading">
              <%= hash["name"]%>
              </h4>
              <p><%= hash["birthday"]%></p>
            
            <%Friendship.request(current_user,user)%>
            <%Friendship.accept(user,current_user)%>
            <p><%= friendship_status(current_user,user) %></p>
        </div>
    </div>
</div>
    <%end %>
<%end%>